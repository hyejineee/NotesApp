<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <import type="android.view.View"/>
        <variable
            name="isLoading"
            type="Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity">


        <include
            android:id="@+id/loadingview"
            layout="@layout/loading_view"
            android:visibility="@{isLoading ? View.VISIBLE : View.GONE }" />

        <TextView
           android:id="@+id/tv_main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/list_main_records"
            app:layout_constraintVertical_bias="0"
            />

        <TextView
            android:id="@+id/tv_main_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sub_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_title"
            app:layout_constraintRight_toRightOf="@id/tv_main_title"
            app:layout_constraintLeft_toLeftOf="@+id/tv_main_title"
            app:layout_constraintBottom_toTopOf="@+id/list_main_records"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"/>

        <LinearLayout
            android:id="@+id/spinner_main_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_sub_title"
            app:layout_constraintLeft_toLeftOf="@id/tv_main_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/list_main_records"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collection"
                android:paddingHorizontal="14dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_main_records"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_main_filter">

        </androidx.recyclerview.widget.RecyclerView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
